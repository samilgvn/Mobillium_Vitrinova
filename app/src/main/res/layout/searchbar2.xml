<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_margin="4dp"
              android:layout_width="match_parent"
              android:background="#fff"
              android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >
            <ImageButton android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:layout_margin="10dp"
                         android:background="@drawable/ic_dehaze_black_24dp"
            />
            <EditText android:layout_width="wrap_content"
                      android:layout_height="48dp"
                      android:layout_weight="1"
                      android:hint="Ürün veya vitrin ara"
            />

            <ImageButton android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:background="@drawable/ic_mic_black_24dp"
                         android:layout_margin="10dp"
                         android:id="@+id/btn_mic"

            />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>




</com.google.android.material.appbar.AppBarLayout>