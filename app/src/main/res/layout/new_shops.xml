<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="270dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        app:cardCornerRadius="4dp" android:layout_height="220dp"
>
    <LinearLayout android:layout_width="270dp"
                  android:orientation="vertical"
                  android:layout_height="220dp"
    >
        <ImageView android:layout_width="270dp"
                   android:background="@drawable/vitrinovalogo"
                   android:id="@+id/newshopimg"
                   android:layout_height="140dp"/>
        <LinearLayout android:layout_width="270dp"
                      android:orientation="horizontal"
                      android:layout_height="match_parent">

            <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent">

                <com.mikhaellopez.circularimageview.CircularImageView

                        android:layout_marginTop="8dp"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vitrinovalogo"
                        app:civ_border_color="#3f51b5"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        android:id="@+id/newshoppimg"
                        app:civ_shadow_radius="10"
                        android:layout_marginLeft="20dp"
                        app:civ_shadow_color="#3f51b5"/>


                <TextView android:layout_width="30dp"
                          android:id="@+id/txtlogo"
                          android:layout_marginTop="10dp"
                          android:layout_height="30dp"
                          android:layout_marginLeft="23dp"
                          android:text="A"
                          android:paddingStart="11dp"
                          android:paddingTop="5dp"
                          android:background="@drawable/btn5_selector"
                />


            </RelativeLayout>

            <LinearLayout android:layout_width="200dp"
                          android:layout_height="80dp"
                          android:layout_marginTop="8dp"
                          android:layout_marginLeft="8dp"
                          android:orientation="vertical"

            >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/newshoptxt"
                          android:text="deneme "
                          android:textStyle="bold"
                          android:textSize="16dp"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="deneme"
                          android:id="@+id/newshopdestxt"
                          android:textSize="14dp"
                />

                <LinearLayout android:layout_width="wrap_content"
                              android:orientation="horizontal"
                              android:layout_height="20dp">

                    <ImageView android:layout_width="12dp"
                               android:layout_marginTop="8dp"
                               android:layout_height="12dp"

                               android:background="@drawable/tt"
                    />

                    <TextView android:layout_width="wrap_content"
                              android:paddingTop="3dp"
                              android:paddingLeft="5dp"
                              android:layout_height="match_parent"
                              android:id="@+id/newshopproducthow"
                              android:text="5 Ürün"
                              android:textSize="15dp"
                    />
                    <TextView android:layout_width="wrap_content"
                              android:paddingTop="3dp"
                              android:textSize="15dp"
                              android:layout_height="match_parent"

                              android:text=" ÜRÜN"

                    />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>