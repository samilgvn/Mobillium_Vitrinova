<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newproduct"
        android:layout_width="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/background"
        app:cardCornerRadius="10dp" android:layout_height="230dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <ImageView android:layout_width="match_parent"
                   android:layout_height="160dp"
                   android:scaleType="centerCrop"
                   android:background="@drawable/vitrinovalogo"
                   android:id="@+id/nwprdct_ImageView"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:textStyle="bold"
                  android:id="@+id/nwprdct_txtTitle"
                  android:layout_marginLeft="4dp"
                  android:maxLength="23"
                  android:text="deneme"
        />
        <TextView android:layout_width="wrap_content"
                  android:paddingTop="5dp"
                  android:layout_marginLeft="4dp"
                  android:layout_height="wrap_content"
                  android:text="deneme"
                  android:id="@+id/nwprdct_txtDes"
        />

        <LinearLayout android:layout_width="match_parent"

                      android:orientation="horizontal"
                      android:layout_marginTop="8dp"
                      android:layout_height="25dp"
                      android:background="#eeeeee"

        >
            <TextView android:layout_width="112dp"
                      android:layout_marginStart="8dp"
                      android:layout_height="match_parent"
                      android:text="100 TL"
                      android:textStyle="bold"
                      android:textSize="14dp"
                      android:layout_marginLeft="4dp"
                      android:layout_weight="1"
                      android:id="@+id/nwprdct_Price"
            />
            <TextView
                    android:layout_marginStart="8dp"
                    android:id="@+id/nwprdct_OldPrice"
                    android:layout_width="match_parent"
                    android:textColor="#757575"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:textSize="12dp"
                    android:text="40TL"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>